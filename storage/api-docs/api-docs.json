{
    "openapi": "3.0.0",
    "info": {
        "title": "Charging Station Management System API Documentation",
        "description": "Full instruction on how to use CSMS endpoints",
        "contact": {
            "email": "khashayarRahmani@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "CSMS API Server"
        }
    ],
    "paths": {
        "/rate": {
            "post": {
                "tags": [
                    "Rates"
                ],
                "summary": "Calculates charging process rating",
                "description": "Calculates and returns charging process rating based on given charge detail record",
                "operationId": "calculateRate",
                "requestBody": {
                    "description": "Pass charge detail records",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "rate",
                                    "cdr"
                                ],
                                "properties": {
                                    "rate": {
                                        "$ref": "#/components/schemas/rate"
                                    },
                                    "cdr": {
                                        "$ref": "#/components/schemas/cdr"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CalculatedRate"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CalculatedRate": {
                "title": "CalculatedRate",
                "description": "Calculated rate",
                "properties": {
                    "overall": {
                        "type": "float",
                        "example": "7.04"
                    },
                    "component": {
                        "$ref": "#/components/schemas/Component"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "CalculatedRate"
                }
            },
            "cdr": {
                "title": "cdr",
                "description": "Charge detail record",
                "properties": {
                    "timestampStart": {
                        "type": "date-time",
                        "example": "2021-04-05T10:04:00Z"
                    },
                    "timestampStop": {
                        "type": "date-time",
                        "example": "2021-04-05T11:27:00Z"
                    },
                    "meterStart": {
                        "type": "integer",
                        "example": "1204307"
                    },
                    "meterStop": {
                        "type": "integer",
                        "example": "1215230"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "ChargeDetailRecord"
                }
            },
            "Component": {
                "title": "Component",
                "description": "Component's prices",
                "properties": {
                    "energy": {
                        "type": "float",
                        "example": "3.277"
                    },
                    "time": {
                        "type": "float",
                        "example": "2.767"
                    },
                    "transaction": {
                        "type": "float",
                        "example": "1"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "ComponentDTO"
                }
            },
            "rate": {
                "title": "rate",
                "description": "Rate",
                "properties": {
                    "energy": {
                        "type": "float",
                        "example": "0.3"
                    },
                    "time": {
                        "type": "float",
                        "example": "2"
                    },
                    "transaction": {
                        "type": "float",
                        "example": "1"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "Rate"
                }
            }
        }
    },
    "tags": [
        {
            "name": "CSMS",
            "description": "API Endpoints of CSMS"
        }
    ],
    "security": [
        []
    ]
}